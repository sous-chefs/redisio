description "Start the redis instance on port <%= @port %>"
author "Installed by chef redisio cookbook"

<% if @run_on_startup %>
start on runlevel [2345]
<% end %>
stop on runlevel [06]

# TODO: parameterize so it is maxclients + x (by default, maxclients is 10000)
<% if @maxclients %>
limit nofile <%= @maxclients + 100 %> <%= @maxclients + 100 %>
<% else %>
limit nofile 10000 10000
<% end %>

setuid <%= @user %>
setgid <%= @group %>

# If the job exits, restart it. Give up with more than 10 restarts in 30 seconds.
respawn
respawn limit 10 30

pre-start exec /usr/local/bin/redis-server <%= @configdir %>/<%= @port %>.conf
post-stop script
 <% if @shutdown_save %>
 /usr/local/bin/redis-cli -p <%= @port %> save
 <% end %>
 /usr/local/bin/redis-cli -p <%= @port %> shutdown
end script