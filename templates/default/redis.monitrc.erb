check process redis-<%= @name %> 
  <%- if @upstart %>
  with pidfile /var/run/redis/redis_<%= @port %>.pid
  <%- else %>
  with pidfile /var/run/redis_<%= @port %>.pid
  <%- end %>
  group <%= @monit_group %>
  <%- if @upstart %>
  start program = "/sbin/start redis-<%= @name %>"
  stop program = "/sbin/stop redis-<%= @name %>"
  <%- else %>
  start program = "/usr/local/bin/redis-server /etc/redis/<%= @port %>.conf"
    <%= "as uid #{@user} and gid #{@group}" if user && group %>
  stop program = "/usr/local/bin/redis-cli -p <%= @port %> shutdown"
    <%= "as uid #{@user} and gid #{@group}" if user && group %>
  <%- end %>
  if failed host 127.0.0.1 port <%= @port %> then restart
  if 5 restarts within 5 cycles then timeout